{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist-ts",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts"]
}
